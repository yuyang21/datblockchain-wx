page{
    background-color: #efefef;
    font-size: 16px;
    font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
}
.weui-grids{
  padding: 0rpx 20rpx;
  overflow: hidden;
  background: #fff;
  padding-bottom: 80rpx;
}
.weui-grid {
  position: relative;
  float: left;
  margin: 15.5rpx 12.5rpx;
  width: 213rpx;
  height: 213rpx;
  box-sizing: border-box;
  border-radius: 10px;
}
.weui-grid__label {
  position: absolute;
  bottom: 10rpx;
  display: block;
  width: 100%;
  text-align: center;
  color: #666666;
  font-size: 29rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
.weui-grid_active {
  /* background-color: #ECECEC; */
}
.page_top{
  background: #fff;
  width: 100%;
  height: auto;
  overflow: hidden;
  margin-bottom: 40rpx;
  padding: 25rpx 0;
}
.page_itme{
  padding-left: 10rpx;
  /* border-bottom: 1px solid #d9d9d9; */
  display: flex;
  align-items: center;
  padding-right: 31.25rpx;
}
.page_itme .four{
  width: 25%;
  text-align: center;
  position: relative;
}
.page_itme .four .msg{
  width: 40rpx;
  height: 40rpx;
  background-color: #ee2f2b;
  position: absolute;
  right: 20rpx;
  top: 68rpx;
  color: #ffffff;
  border-radius: 50%;
}
.page_itme .four image{
  width: 130rpx;
  height: 130rpx;
  margin-bottom:10rpx;
}
.page_itme .four text{
  width: 45rpx;
  height: 45rpx;
  line-height: 45rpx;
  border-radius: 50%;
  background-color: #ee2f2b;
  position: absolute;
  right: 9rpx;
  bottom: 35%;
  display: block;
  text-align: center;
  color: #fff;
}
.page_bottom{
  background: #fff;
  width: 100%;
  height: auto;
  overflow: hidden;
  margin-bottom: 40rpx;
}
.page_bottom .itme{
  height: 110rpx;
  padding-left: 31.25rpx;
  display: flex;
  align-items: center;
  padding-right: 31.25rpx;
  color: #666666;
}
.page_bottom .itme image {
  width: 5.6%;
  height: 40rpx;
  margin-right: 25rpx;
}
.border_bottom {
  border-bottom: 1rpx solid #eee;
}